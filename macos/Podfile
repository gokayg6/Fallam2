platform :osx, '10.15'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'ephemeral', 'Flutter-Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure \"flutter pub get\" is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Flutter-Generated.xcconfig, then run \"flutter pub get\""
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_macos_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_macos_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Apply Flutter's defaults
    flutter_additional_macos_build_settings(target)

    # Remove stray '-G' style flags from COMPILER_FLAGS if present
    if target.respond_to?(:build_configurations)
      target.build_configurations.each do |config|
        ['OTHER_CFLAGS','OTHER_CPLUSPLUSFLAGS','OTHER_LDFLAGS'].each do |k|
          next unless config.build_settings[k]
          v = config.build_settings[k].is_a?(Array) ? config.build_settings[k].join(' ') : config.build_settings[k]
          v = v.split(' ').reject { |f| f.start_with?('-G') }.join(' ')
          config.build_settings[k] = v
        end
      end
    end
  end

  # Ensure gRPC and abseil compile with C++17 and libc++
  installer.pods_project.targets.each do |t|
    if t.name =~ /gRPC-Core|gRPC-C\+\+|abseil/
      t.build_configurations.each do |config|
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
        config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
        existing = config.build_settings['OTHER_CPLUSPLUSFLAGS'] || '$(inherited)'
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = [existing, '-std=c++17', '-stdlib=libc++'].join(' ')
        ldflags = config.build_settings['OTHER_LDFLAGS'] || '$(inherited)'
        config.build_settings['OTHER_LDFLAGS'] = [ldflags, '-lc++'].join(' ')
      end
    end
  end

  # Patch gRPC template issue in generated headers
  ['gRPC-Core','gRPC-C++'].each do |pod_name|
    grpc_path = File.join(installer.sandbox.root, "#{pod_name}/src/core/lib/promise/detail/basic_seq.h")
    if File.exist?(grpc_path)
      content = File.read(grpc_path)
      if content.include?("Traits::template CallSeqFactory")
        File.write(grpc_path, content.gsub("Traits::template CallSeqFactory", "Traits::CallSeqFactory"))
        puts "âœ… Patched #{pod_name} basic_seq.h for macOS"
      end
    end
  end
end
